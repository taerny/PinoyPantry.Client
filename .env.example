# Shopify Store Configuration
# Copy this file to .env and fill in your actual values

# Your Shopify store domain (e.g., your-store.myshopify.com)
VITE_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify Storefront API Access Token
# Create this in: Shopify Admin > Apps > Develop apps > Create an app
# Grant ""Storefront API"" permissions
VITE_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# Optional: Shopify API Version (defaults to 2024-01 if not specified)
VITE_SHOPIFY_API_VERSION=2024-01

# Optional: Enable/disable mock data mode for development
# Set to 'true' to use mock data instead of Shopify API
VITE_USE_MOCK_DATA=false

# Optional: Maintenance Mode
# Set to 'true' to put the website in maintenance mode (shows maintenance page)
# Set to 'false' or leave unset to keep website online
VITE_MAINTENANCE_MODE=false
